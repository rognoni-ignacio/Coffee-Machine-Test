@model CoffeeModel
@using CoffeeMachine.Models

@{
    ViewData["Title"] = "New Coffee";
}

<h2>New Coffee</h2>

<h4>CoffeeModel</h4>
<hr />
<div class="row">
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items='Html.GetEnumSelectList<CoffeeType>()'></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpoonsOfSugar" class="control-label"></label>
                <input asp-for="SpoonsOfSugar" class="form-control" min="0" />
                <span asp-validation-for="SpoonsOfSugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="UseOwnMug" /> @Html.DisplayNameFor(model => model.UseOwnMug)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>